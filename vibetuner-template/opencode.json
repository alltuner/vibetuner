{
  "$schema": "https://opencode.ai/config.json",
  "instructions": [
    "CONTRIBUTING.md",
    "DEVELOPMENT.md", 
    "AGENTS.md",
  ],
  "permission": {
    "bash": {
      "cat *": "allow",
      "curl *": "allow",
      "echo *": "allow",
      "find *": "allow",
      "gh issue *": "allow",
      "gh pr *": "allow",
      "gh run *": "allow",
      "gh workflow *": "allow",
      "git add *": "allow",
      "git checkout *": "allow",
      "git commit *": "allow",
      "git describe *": "allow",
      "git diff *": "allow",
      "git fetch *": "allow",
      "git log *": "allow",
      "git pull *": "allow",
      "git push *": "allow",
      "git stash *": "allow",
      "git status *": "allow",
      "git switch *": "allow",
      "git tag *": "allow",
      "grep *": "allow",
      "head *": "allow",
      "just *": "allow",
      "ls *": "allow",
      "mkdir *": "allow",
      "msgattrib *": "allow",
      "msgfmt *": "allow",
      "nc *": "allow",
      "bun *": "allow",
      "python *": "allow",
      "readlink *": "allow",
      "rg *": "allow",
      "ruff *": "allow",
      "rumdl *": "allow",
      "sed *": "allow",
      "tail *": "allow",
      "time *": "allow",
      "tree *": "allow",
      "ty *": "allow",
      "uv *": "allow",
      "uvx uv-bump *": "allow"
    }
  },
  "formatter": {
    "taplo": {
      "command": ["uv", "run", "taplo", "fmt", "$FILE"],
      "extensions": [".toml"]
    },
    "djlint": {
      "command": ["uv", "run", "djlint", "$FILE", "--reformat"],
      "extensions": [".html", ".jinja", ".jinja2"]
    },

    "rumdl": {
      "command": ["uv", "run", "rumdl", "fmt", "$FILE"],
      "extensions": [".md"]
    }
  },
  "lsp": {
    "ty": {
      "command": ["ty", "lsp"],
      "extensions": [".py"],
      "initialization": {
        "settings": {
          "python": {
            "analysis": {
              "autoSearchPaths": true,
              "useLibraryCodeForTypes": true
            }
          }
        }
      }
    }
  },
  "command": {
    "format": {
      "template": "Run the full formatting suite on the codebase using just format.\nThis will format Python, TOML, Jinja, YAML, and Markdown files.",
      "description": "Format all code files"
    },
    "lint": {
      "template": "Run all linting checks using just lint.\nThis includes Python, Jinja, Markdown, TOML, and YAML linting.",
      "description": "Run all linting checks"
    },
    "type-check": {
      "template": "Run type checking with ty on the Python codebase.\nFocus on any type errors and suggest fixes.",
      "description": "Run type checking on Python code"
    }
  }
}
