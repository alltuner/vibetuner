[project]
name = "{{ project_slug }}"
version = "0.0.0"
description = "{{ project_description }}"
{% if author_name or author_email -%}
authors = [
  {%- if author_name and author_email %}
  { name = "{{ author_name }}", email = "{{ author_email }}" },
  {%- elif author_name %}
  { name = "{{ author_name }}" },
  {%- else %}
  { email = "{{ author_email }}" },
  {%- endif %}
]
{%- endif %}
readme = "README.md"
requires-python = ">={{ python_version }}"
dependencies = [
    "vibetuner>=4.0.0",
]

[project.scripts]
vibetuner = "vibetuner.cli:app"

[dependency-groups]
dev = [
  "vibetuner[dev]",
]

[build-system]
requires = ["uv_build>=0.6.6"]
build-backend = "uv_build"

[tool.uv]
cache-keys = [{ file = "pyproject.toml" }]

