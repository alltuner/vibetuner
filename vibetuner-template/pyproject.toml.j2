[project]
name = "{{ project_slug }}"
dynamic = ["version"]
description = "{{ project_description }}"
{% if author_name or author_email -%}
authors = [
  {%- if author_name and author_email %}
  { name = "{{ author_name }}", email = "{{ author_email }}" },
  {%- elif author_name %}
  { name = "{{ author_name }}" },
  {%- else %}
  { email = "{{ author_email }}" },
  {%- endif %}
]
{%- endif %}
readme = "README.md"
requires-python = ">={{ python_version }}"
dependencies = [
    # These are the base dependencies of AllTuner's blessed stack
    "vibetuner>=2.26.0",
    # Below this line you can add your dependencies
]

[project.scripts]
vibetuner = "vibetuner.cli:app"

[dependency-groups]
dev = [
  "vibetuner[dev]",
  # Add below this line any dev dependencies you need for development
]

[build-system]
requires = ["hatchling", "uv-dynamic-versioning"]
build-backend = "hatchling.build"

[tool.uv]
cache-keys = [
    { file = "pyproject.toml" },
    { git = { commit = true, tags = true } },
]

[tool.uv-dynamic-versioning]
fallback-version = "0.0.0"

[tool.hatch.version]
source = "uv-dynamic-versioning"

[tool.hatch.build.hooks.version]
path = "src/app/_version.py"
template = '''
version = "{version}"
'''

[tool.hatch.build.targets.wheel]
packages = ["src/app"]

# To develop against a local copy of vibetuner-py, add:
#
# [tool.uv.sources]
# vibetuner = { path = "packages/vibetuner-py", editable = true }
#
# Then run: uv sync
# Local Python changes will be picked up immediately.
# Note: Docker builds use --no-sources to ignore this for production.
