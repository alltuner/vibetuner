{% set redis_enabled = enable_redis or enable_job_queue %}
[project]
name = "{{ project_slug }}"
dynamic = ["version"]
description = "{{ project_description }}"
authors = [{ name = "{{ author_name }}", email = "{{ author_email }}" }]
readme = "README.md"
requires-python = ">={{ python_version }}"
dependencies = [
    # These are the base dependencies of AllTuner's blessed stack
    "arel>=0.3.0",
    "asyncer>=0.0.8",
    "authlib>=1.5.2",
    "beanie[zstd]>=1.30.0",
    "boto3>=1.38.38",
    # Fixme, remove click's dep when the stderr error is fixed
    "click~=8.1.0",
    "fastapi[standard]>=0.115.13",
    "httpx[http2]>=0.28.1",
    "itsdangerous>=2.2.0",
    "loguru>=0.7.3",
    "pydantic[email]>=2.11.7",
    "pydantic-extra-types[pycountry]>=2.10.5",
    "pydantic-settings>=2.9.1",
    "pyyaml>=6.0.2",
{%- if redis_enabled %}
    "redis[hiredis]>=5.3.0",
{%- endif %}
    "rich>=14.0.0",
{%- if enable_job_queue %}
    "streaq>=0.2.1",
{%- endif %}
    "starlette-babel>=1.0.3",
    "starlette-compress>=1.6.1",
    "starlette-htmx>=0.1.1",
    "typer-slim[standard]>=0.16.0",
]

[project.optional-dependencies]
base = [
    # Below this line you can add your dependencies
]

[project.scripts]
{{ project_slug }} = "{{ project_slug }}.cli:app"


[dependency-groups]
scaffolding = [
    # These are the development dependencies of AllTuner's blessed stack
    # You should not add anything in this dependency group
    "babel>=2.17.0",
    "boto3-stubs[ses]>=1.38.38",
    "cloudflare>=4.3.1",
    "djlint>=1.36.4",
    "mypy>=1.16.1",
    "redis[hiredis]>=5.3.0",
    "ruff>=0.12.0",
    "streaq>=0.2.1",
    "ty>=0.0.1a11",
    "types-authlib>=1.5.0.20250608",
    "types-pyyaml>=6.0.12.20250516",
]

dev = [
    # Add below this line any dev dependencies you need for development
]

[build-system]
requires = ["hatchling", "uv-dynamic-versioning"]
build-backend = "hatchling.build"

[tool.uv]
default-groups = ["dev", "scaffolding"]

[tool.ruff.lint]
extend-select = [
    # E and F are enabled by default
    'B',      # flake8-bugbear
    'C4',     # flake8-comprehensions
    'C90',    # mccabe
    'I',      # isort
    'N',      # pep8-naming
    'Q',      # flake8-quotes
    'RUF100', # ruff (unused noqa)
    'S',      # flake8-bandit
    'W',      # pycodestyle
]

[tool.ruff.lint.isort]
combine-as-imports = true
lines-after-imports = 2

[tool.mypy]
plugins = ['pydantic.mypy']

[tool.uv-dynamic-versioning]
fallback-version = "0.0.0"

[tool.hatch.version]
source = "uv-dynamic-versioning"

[tool.hatch.build.hooks.version]
path = "src/{{ project_slug }}/_version.py"
template = '''
version = "{version}"
'''
