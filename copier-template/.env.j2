# Environment Configuration
# Generated by vibetuner scaffolding

# Database Configuration
MONGODB_URL={{ mongodb_url }}
DATABASE_URL={{ mongodb_url }}{{ project_slug }}

# Redis Configuration (only if job queue is enabled)
{% if enable_job_queue %}
REDIS_URL={{ redis_url }}
{% endif %}

# Application Configuration
SECRET_KEY=ct-!secret-must-change-me-{{ project_slug | replace('-', '') }}-dev
DEBUG=true

# Project Information
PROJECT_NAME={{ project_name }}
PROJECT_SLUG={{ project_slug }}
COMPANY_NAME={{ company_name }}

# Author Information
AUTHOR_NAME={{ author_name }}
AUTHOR_EMAIL={{ author_email }}

# Python Version
PYTHON_VERSION={{ python_version }}

# Development Settings
ENVIRONMENT=development
VERSION=0.0.0

# Optional: FQDN (if provided)
{% if fqdn %}
FQDN={{ fqdn }}
{% endif %}